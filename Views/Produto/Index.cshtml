@model IEnumerable<Projeto_Sistema_de_Vendas.Models.Produto>

<h1>Produtos Cadastrados</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nome do Produto</th>
            <th>Descrição</th>
            <th>Preço Unitário</th>
            <th>Quantidade em Estoque</th>
            <th>Unidade Medida</th>
            <th>Foto</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(Model => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(Model => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(Model => item.PrecoUnitario)
                </td>
                <td>
                    @Html.DisplayFor(Model => item.QuantidadeEmEstoque)
                </td>
                <td>
                    @Html.DisplayFor(Model => item.UnidadeDeMedidaProduto)
                </td>
                <td>
                    @Html.DisplayFor(Model => item.Foto)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Excluir" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br/>
<a asp-action="Cadastrar" class="btn btn-primary w-100">Cadastrar Novo Produto</a>

<a asp-action="Menu" asp-controller="Home" class="btn btn-success w-100 mt-3">Voltar</a>
