@model Projeto_Sistema_de_Vendas.Models.Produto

<h1>Excluir Cliente</h1>

<div class="row">
        <form asp-action="Excluir" onsubmit="return confirmExluir();">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label"><strong>Nome</strong></label>
                <input asp-for="Nome" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"><strong>Descrição</strong></label>
                <input asp-for="Descricao" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="PrecoUnitario" class="control-label"><strong>Preço Unitário</strong></label>
                <input asp-for="PrecoUnitario" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="QuantidadeEmEstoque" class="control-label"><strong>Quantidade em Estoque</strong></label>
                <input asp-for="QuantidadeEmEstoque" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="UnidadeDeMedidaProduto" class="control-label"><strong>Unidade de Medida</strong></label>
                <select asp-for="UnidadeDeMedidaProduto" asp-items="ViewBag.UnidadeDeMedidaProduto" class="form-control" readonly ></select>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"><strong>Foto</strong></label>
                <input asp-for="Foto" class="form-control" readonly />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Excluir" class="btn btn-danger w-100" />
            </div>
        </form>
</div>
<a asp-action="Index" class="btn btn-success w-100 mt-3">Voltar</a>

<script type = "text/javascript">
    function confirmExluir(){
        var nome = "@Model.Nome";
        var precoUnitario = "@Model.PrecoUnitario";
        var quantidadeEmEstoque = "@Model.QuantidadeEmEstoque";

        var mensagem = `Tem certeza que deseja excluir o Produto: \nNome: ${nome} \nPreço Unitário: ${precoUnitario} \nQuantidade Em Estoque: ${quantidadeEmEstoque}`;
        return confirm(mensagem);
    }
</script>