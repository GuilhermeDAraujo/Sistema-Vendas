@model Projeto_Sistema_de_Vendas.Models.Produto

<h1>Cadastrar Novo Produto</h1>

<div class="row">
        <form asp-action="Cadastrar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"><strong>Nome do Produto</strong></label>
                <span asp-validation-for="Nome" class="text-danger"></span>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"><strong>Descrição</strong></label>
                <span asp-validation-for="Descricao" class="text-danger"></span>
                <input asp-for="Descricao" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PrecoUnitario" class="control-label"><strong>Preço Unitário</strong></label>
                <span asp-validation-for="PrecoUnitario" class="text-danger"></span>
                <input asp-for="PrecoUnitario" class="form-control" value="0.0"/>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadeEmEstoque" class="control-label"><strong>Quantidade em Estoque</strong></label>
                <span asp-validation-for="QuantidadeEmEstoque" class="text-danger"></span>
                <input asp-for="QuantidadeEmEstoque" class="form-control" value="0.0"/>
            </div>
            <div class="form-group">
                <label asp-for="UnidadeDeMedidaProduto" class="control-label"><strong>Unidade de Medida</strong></label>
                <span asp-validation-for="UnidadeDeMedidaProduto" class="text-danger"></span>
                <select asp-for="UnidadeDeMedidaProduto" asp-items="ViewBag.UnidadeDeMedidaProduto" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"><strong>Foto</strong></label>
                <span asp-validation-for="Foto" class="text-danger"></span>
                <input asp-for="Foto" class="form-control" />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary w-100" />
            </div>
        </form>
</div>
<a asp-action="Index" class="btn btn-success w-100 mt-3">Voltar</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
