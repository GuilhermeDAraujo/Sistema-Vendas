@model Projeto_Sistema_de_Vendas.Models.Vendedor

<h1>Excluir Vendedor</h1>

<div class="row">
        <form asp-action="Excluir" onsubmit="return confirmExluir();">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label"><strong>Nome</strong></label>
                <input asp-for="Nome" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Email"class="control-label"><strong>E-mail</strong></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Excluir" class="btn btn-danger w-100" />
            </div>
        </form>
</div>
<a asp-action="Index" class="btn btn-success w-100 mt-3">Voltar</a>

<script type = "text/javascript">
    function confirmExluir(){
        var nome = "@Model.Nome";
        var email = "@Model.Email";

        var mensagem = `Tem certeza que deseja excluir o cliente: \nNome: ${nome} \nEmail: ${email}`;
        return confirm(mensagem);
    }
</script>