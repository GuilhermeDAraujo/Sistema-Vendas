@model Projeto_Sistema_de_Vendas.ViewModels.RelatorioVendedor


<form asp-action="Vendedor">
    <div class="form-group">
        <label><strong>Vendedor</strong></label>
        <select asp-for="ProcurarVendedorId" asp-items="@ViewBag.VendedorLista" class="form-control"></select>
    </div>
    <br>
    <button type="submit" class="btn btn-primary w-100">Pesquisar</button>
</form>

<br>

@if (Model.ListaVendas != null && Model.ListaVendas.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th class="text-center align-middle">Vendedor</th>
                <th class="text-center align-middle">Cliente</th>
                <th class="text-center align-middle">Data da Venda</th>
                <th class="text-center align-middle">Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListaVendas)
            {
                <tr>
                    <td class="text-center align-middle">
                        @item.Vendedor.Nome        
                    </td>
                    <td class="text-center align-middle">
                        @item.Cliente.Nome
                    </td>
                    <td class="text-center align-middle">
                        @item.DataVenda.ToString("dd/MM/yyyy")
                    </td>
                    <td class="text-center align-middle">
                        R$ @item.Total
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-primary">Nenhuma venda encontrada para o vendedor selecionado</p>
}
<br>
<a asp-action="Index" class="btn btn-success w-100 mt-3">Voltar</a>
