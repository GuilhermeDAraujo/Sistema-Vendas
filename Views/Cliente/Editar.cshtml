@model Projeto_Sistema_de_Vendas.Models.Cliente

<h1>Editar Cliente</h1>


<div class="row">
        <form asp-action="Editar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"><strong>Nome</strong></label>
                <span asp-validation-for="Nome" class="text-danger"></span>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CpfCnpj" class="control-label"><strong>CPF ou CNPJ</strong></label>
                <span asp-validation-for="CpfCnpj" class="text-danger"></span>
                <input asp-for="CpfCnpj" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email"class="control-label"><strong>E-mail</strong></label>
                <span asp-validation-for="Email" class="text-danger"></span>
                <input asp-for="Email" class="form-control" />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary w-100" />
            </div>
        </form>
</div>
<a asp-action="Index" class="btn btn-success w-100 mt-3">Voltar</a>