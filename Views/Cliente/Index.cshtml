@model IEnumerable<Projeto_Sistema_de_Vendas.Models.Cliente>

<h1>Clientes Cadastrados</h1>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th class="text-center align-middle">Nome do Cliente</th>
            <th class="text-center align-middle">CPF ou CNPJ</th>
            <th class="text-center align-middle">E-mail</th>
            <th class="text-center align-middle"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center align-middle">
                    @Html.DisplayFor(Model => item.Nome)
                </td>
                <td class="text-center align-middle">
                    @Html.DisplayFor(Model => item.CpfCnpj)
                </td>
                <td class="text-center align-middle">
                    @Html.DisplayFor(Model => item.Email)
                </td>
                <td class="text-center align-middle">
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Excluir" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br/>
<a asp-action="Cadastrar" class="btn btn-primary w-100">Cadastrar Novo Cliente</a>

<a asp-action="Menu" asp-controller="Home" class="btn btn-success w-100 mt-3">Voltar</a>
