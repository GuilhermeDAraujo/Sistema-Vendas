@model Projeto_Sistema_de_Vendas.Models.Cliente

@{
    ViewData["Title"] = "Excluir Cliente";
}

<h1>Excluir Cliente</h1>

<div class="row">
        <form asp-action="Excluir" onsubmit="return confirmExluir();">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label"><strong>Nome</strong></label>
                <input asp-for="Nome" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="CpfCnpj" class="control-label"><strong>CPF ou CNPJ</strong></label>
                <input asp-for="CpfCnpj" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Email"class="control-label"><strong>E-mail</strong></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Excluir" class="btn btn-danger w-100" />
            </div>
        </form>
</div>
<a asp-action="Index" class="btn btn-success w-100 mt-3">Voltar</a>

<script type = "text/javascript">
    function confirmExluir(){
        var nome = "@Model.Nome";
        var cpfCnpj = "@Model.CpfCnpj";
        var email = "@Model.Email";

        var mensagem = `Tem certeza que deseja excluir o cliente: \nNome: ${nome} \nCPF/CNPJ: ${cpfCnpj} \nEmail: ${email}`;
        return confirm(mensagem);
    }
</script>